<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorBlack"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/submit_header"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginStart="@dimen/_60dp"
                />
            <ImageView
                android:layout_width="@dimen/_250dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/submit_sub"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginStart="@dimen/_60dp"
                />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_70dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_firstname"
            android:layout_width="@dimen/_180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"

            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:fontFamily="@font/quicksand_medium"
            android:hint="@string/first_name"
            android:inputType="textCapSentences"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_8dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sp" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_surname"
            android:layout_width="@dimen/_180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginStart="@dimen/_10dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:fontFamily="@font/quicksand_medium"
            android:hint="@string/surname"
            android:inputType="textCapSentences"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_8dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_70dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:fontFamily="@font/quicksand_medium"
        android:hint="@string/email"

        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sp" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_submit_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_70dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:fontFamily="@font/quicksand_medium"
        android:hint="@string/github_link"

        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exit_button"
        android:text="Submit"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/_40dp"
        android:paddingRight="@dimen/_40dp"
        android:paddingTop="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        android:layout_marginTop="@dimen/_70dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_submit"
        android:layout_marginStart="@dimen/_8dp"
        android:fontFamily="@font/quicksand_medium"
        android:textAllCaps="false"/>


</LinearLayout>